@model Anagrafica


<form asp-controller="Anagrafica" asp-action="Add" method="post" class="mt-4">
    <div class="form-group">
        <label asp-for="@Model.Cognome" class="col-form-label">Cognome:</label>
        <input type="text" asp-for="@Model.Cognome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nome" class="col-form-label">Nome:</label>
        <input type="text" asp-for="@Model.Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Indirizzo" class="col-form-label">Indirizzo:</label>
        <input type="text" asp-for="@Model.Indirizzo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Citta" class="col-form-label">Città:</label>
        <input type="text" asp-for="@Model.Citta" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.CAP" class="col-form-label">CAP:</label>
        <input type="text" asp-for="@Model.CAP" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Cod_Fisc" class="col-form-label">Codice Fiscale:</label>
        <input type="text" asp-for="@Model.Cod_Fisc" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
