@if (TempData["MessageSuccess"] is not null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MessageSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["MessageError"] is not null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MessageError"]
    </div>
}


<h2>Trasgressori</h2>

@if (Model.Count == 0)
{
    <h3>Non ci sono trasgressori nel database</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Cognome</th>
                <th scope="col">Indirizzo</th>
                <th scope="col">Citta</th>
                <th scope="col">CAP</th>
                <th scope="col">Cod_fisc</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var trasgressore in Model)
            {
                <tr>
                    <td scope="col">@trasgressore.IDAnagrafica</td>
                    <td scope="col">@trasgressore.Nome</td>
                    <td scope="col">@trasgressore.Cognome</td>
                    <td scope="col">@trasgressore.Indirizzo</td>
                    <td scope="col">@trasgressore.Citta</td>
                    <td scope="col">@trasgressore.CAP</td>
                    <td scope="col">@trasgressore.Cod_Fisc</td>
                </tr>
            }
        </tbody>
    </table>
}